<%- include("header") %>
<body >
    <h1>Convert your currency</h1>
    <div class="d-flex flex-column flex-md-row p-4 gap-4 py-md-5 align-items-center justify-content-center">
        <form action="/" method="post">
            <select class="dropdown-menu position-static d-grid gap-1 p-2 rounded-3 mx-0 shadow w-220px" data-bs-theme="light" name="currency1">
                <% for (var i = 0 ; i < curr.length ; i++) { %>
                    <option value=<%= curr[i] %>><%= curr[i] %></option>
                <% } %>
            </select>
            <select class="dropdown-menu position-static d-grid gap-1 p-2 rounded-3 mx-0 shadow w-220px" data-bs-theme="light"   name="currency2">
                <% for (var i = 0 ; i < curr.length ; i++) { %>
                    <option value=<%= curr[i] %>><%= curr[i] %></option>
                <% } %>
            </select>
            <input class="input" type="text" name="amount">
            <button class="btn btn-primary" type="submit" name="wish" value="no">Convert</button>
        </form>
    </div>
</body>
</html>